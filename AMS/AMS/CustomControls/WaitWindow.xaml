<UserControl x:Class="AMS.CustomControls.WaitWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AMS.CustomControls"
             mc:Ignorable="d" 
             Width="250" Height="70"
             Background="White">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
        <local:CircularProgressBar Width="30"/>
        <TextBlock  x:Name="Message"
                        Text="Loading..." 
                        FontSize="16"
                        Margin="20, 0"
                        VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
